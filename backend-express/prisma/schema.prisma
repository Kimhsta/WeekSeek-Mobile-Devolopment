generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  profile  String
  username String
  email    String @unique
  password String
  role     Role
  films    Film[] @relation("UploadedFilms")
}

model Film {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  description String?
  genre       String?
  releaseYear Int?
  duration    Int?
  views       Int      @default(0)
  posterUrl   String?
  trailerUrl  String?
  uploadedBy  Int
  uploadedAt  DateTime @default(now())

  uploader User @relation("UploadedFilms", fields: [uploadedBy], references: [id])
}

enum Role {
  admin
  user
}
